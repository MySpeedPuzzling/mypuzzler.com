---
import { profile } from "../data/mock-data";
---

<div class="relative widget-fade-in">
  <!-- Coral gradient hero -->
  <div class="relative hero-gradient overflow-hidden pb-14">
    <div class="noise-overlay absolute inset-0 pointer-events-none"></div>

    <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 pt-6 sm:pt-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:gap-6">
        <!-- Avatar -->
        <div class="shrink-0">
          <div class="avatar-ring rounded-full p-[3px] inline-block">
            <div class="bg-white rounded-full p-[3px]">
              <img
                src={profile.avatar}
                alt={profile.name}
                class="w-28 h-28 sm:w-32 sm:h-32 rounded-full object-cover"
              />
            </div>
          </div>
        </div>

        <!-- Name, country, bio -->
        <div class="mt-3 sm:mt-0 flex-1 min-w-0">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
            <div>
              <h1 class="font-display font-bold text-white text-2xl sm:text-3xl">{profile.name}</h1>
              <p class="text-white text-sm mt-0.5">
                <span class="mr-1">{profile.countryFlag}</span>
                {profile.country}
                <span class="text-white/50 mx-2">Â·</span>
                <span class="text-white/90">Member since {profile.memberSince}</span>
              </p>
            </div>
            <!-- Actions -->
            <div class="flex items-center gap-3 shrink-0">
              <a
                href={profile.socials.instagram}
                class="w-9 h-9 rounded-full bg-white/15 hover:bg-white/25 flex items-center justify-center transition-colors"
                aria-label="Instagram"
              >
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
                </svg>
              </a>
              <a
                href={profile.socials.facebook}
                class="w-9 h-9 rounded-full bg-white/15 hover:bg-white/25 flex items-center justify-center transition-colors"
                aria-label="Facebook"
              >
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a
                href={profile.profileUrl}
                class="inline-flex items-center gap-2 px-4 py-2 bg-white text-coral-400 rounded-lg text-sm font-semibold hover:bg-white/90 transition-colors active:scale-95"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
                Send message
              </a>
            </div>
          </div>
          <p class="text-white/90 text-sm mt-2 max-w-xl">{profile.bio}</p>
        </div>
      </div>
    </div>
  </div>
</div>
