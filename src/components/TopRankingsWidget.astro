---
import WidgetWrapper from "./WidgetWrapper.astro";
import { topRankings } from "../data/mock-data";
---

<WidgetWrapper title="Top Rankings" moreLink="https://myspeedpuzzling.com/player/simona-mikesova/rankings" moreText="See all rankings →">
  <div class="space-y-2">
    {topRankings.map((entry) => (
      <div class="flex items-center gap-3 p-3 rounded-lg border bg-slate-50 border-slate-100">
        <div class="shrink-0 text-center">
          <span class="font-display font-bold text-lg text-coral-400">#{entry.rank}</span>
          <span class="text-slate-400 text-xs font-medium"> / {entry.total}</span>
        </div>
        <div class="flex-1 min-w-0">
          <div class="text-sm font-medium text-slate-700 truncate">{entry.puzzleName}</div>
          <div class="text-xs text-slate-400">{entry.brand} · {entry.pieces}pc · {entry.category}</div>
        </div>
        <div class="text-right shrink-0">
          <div class="time-display font-bold text-slate-800 text-sm">{entry.time}</div>
        </div>
      </div>
    ))}
  </div>
</WidgetWrapper>
